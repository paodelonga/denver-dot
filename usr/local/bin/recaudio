#!/usr/bin/bash

test -d "$HOME/Videos/Screenrecord/" || mkdir -p "$HOME/Videos/Screenrecord/"
ffmpeg -f pulse -ac 2 -i alsa_output.pci-0000_00_1f.3.analog-stereo.monitor -f x11grab -video_size $(xdpyinfo | grep 'dimensions:' | awk '{print $2;}') -i $DISPLAY -c:v libx264 -preset ultrafast -framerate 90 -crf 8 $(test -n "$1" && echo "$1" || date "+$HOME/Videos/Screenrecord/video_%Y.%m.%d-%H_%M_%S.mp4")
