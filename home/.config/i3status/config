# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
}
order += "volume master"
# order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
# order += "load"
order += "cpu_usage"
order += "memory"
order += "disk /"
order += "cpu_temperature 0"
order += "tztime local"

volume master {
        format = "V: %volume"
        format_muted = "V: [%volume]"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

wireless _first_ {
        format_up = "W: %essid %ip ; %quality %bitrate %frequency"
        format_down = "W: DOWN"
        format_quality = "%02d%s"
}

wireless _first_ {
        format_up = "W: %essid %ip ; %quality %bitrate %frequency"
        format_down = "W: DOWN"
        format_quality = "%02d%s"
}


ethernet _first_ {
        format_up = "E: %ip ; %speed"
        format_down = "E: DOWN"
}

battery all {
        format = "B: %status %percentage %consumption ; %remaining %emptytime"
        status_chr = "CHT"
        status_bat = "BAT"
        status_unk = "UNK"
        status_full = "FULL"
        low_threshold = 25
        threshold_type = percentage
}

disk "/" {
        format = "D: %avail ; %total"
        low_threshold = 2
        threshold_type = "gbytes_avail"
}

# load {
#         format = "L: 1min %5min %15min"
# }

cpu_usage {
        format = "C: %usage"
        max_threshold = 80
        degraded_threshold = 25
        format_above_threshold = "C: >> %usage"
        format_above_degraded_threshold = "C: << %usage"
}

memory {
        format = "M: %used ; %total"
        threshold_degraded = "800M"
        threshold_critical = "400M"
        format_degraded = "%available"
}

cpu_temperature 0 {
        format = "T: %degrees °C"
        max_threshold = 60
        format_above_threshold = ">> %degrees °C"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
