memory {
        format = "<span color='#a6a6a6'>M: %used ; %total</span>"
        threshold_degraded = "800M"
        threshold_critical = "400M"
        format_degraded = "M: %available"
}

cpu_temperature 0 {
        format = "<span color='#a6a6a6'>T: %degrees °C</span>"
        max_threshold = 60
        format_above_threshold = "<< %degrees °C"
}

tztime local {
        format = "<span color='#a6a6a6'>%Y-%m-%d %H:%M:%S</span>"
}
