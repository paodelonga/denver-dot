# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
}
order += "volume master"
# order += "ipv6"
# order += "wireless _first_"
# order += "ethernet _first_"
order += "battery all"
# order += "load"
# order += "cpu_usage"
order += "memory"
order += "disk /"
order += "cpu_temperature"
order += "tztime local"

volume master {
        format = "V: %volume"
        format_muted = "V: [%volume]"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

# wireless _first_ {
#         format_up = "W: %essid %ip ; %quality %bitrate %frequency"
#         format_down = "W: DOWN"
#         format_quality = "%02d%s"
# }

# ethernet _first_ {
#         format_up = "E: %ip %speed"
#         format_down = "E: DOWN"
# }

battery all {
        format = "B: %status %percentage %remaining ; %emptytime %consumption"
        status_chr = "C"
        status_bat = "D"
        status_unk = "U"
        status_full = "F"
        low_threshold = 15
        threshold_type = percentage
}

disk "/" {
        format = "D: %avail ; %total"
        # low_threshold = 4
        threshold_type = "gbytes_avail"
}

# load {
#         format = "L: %5min ; %15min"
# }

# cpu_usage {
#         format = "C: %usage"
#         max_threshold = 80
#         format_above_threshold = ">> %usage"
# }

memory {
        format = "M: %used ; %available"
        threshold_degraded = "2G"
        threshold_critical = "800M"
        format_degraded = "<< %available"
}

cpu_temperature 0 {
        format = "T: %degrees °C"
        max_threshold = 85
        format_above_threshold = ">> %degrees °C"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
